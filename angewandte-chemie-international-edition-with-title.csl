<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" demote-non-dropping-particle="sort-only" default-locale="en-US">
  <info>
    <title>Angewandte Chemie (Modified with Article Title in Quotes)</title>
    <id>http://www.zotero.org/styles/angewandte-chemie-modified</id>
    <link href="http://www.zotero.org/styles/angewandte-chemie" rel="self"/>
    <author>
      <name>OpenAI Modified</name>
    </author>
    <category citation-format="numeric"/>
    <category field="chemistry"/>
    <issn>1433-7851</issn>
    <eissn>1521-3773</eissn>
    <updated>2025-07-08T00:00:00+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>

  <macro name="author">
    <names variable="author">
      <name initialize-with=". " delimiter=", " delimiter-precedes-last="always"/>
      <label form="short" prefix=", " text-case="capitalize-first" suffix=" "/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
      </substitute>
    </names>
  </macro>

  <macro name="year-date">
    <group font-weight="bold">
      <date variable="issued">
        <date-part name="year"/>
      </date>
    </group>
  </macro>

  <macro name="access">
    <choose>
      <if variable="page" match="none">
        <choose>
          <if variable="DOI">
            <text variable="DOI" prefix=" DOI: "/>
          </if>
        </choose>
        <choose>
          <if type="webpage">
            <text variable="URL" prefix=" Available at: "/>
          </if>
        </choose>
      </if>
    </choose>
  </macro>

  <macro name="pages">
    <text variable="page"/>
  </macro>

  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout vertical-align="sup" delimiter="," prefix="[" suffix="]">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <bibliography entry-spacing="0" second-field-align="flush">
    <layout suffix=".">
      <text variable="citation-number" prefix="[" suffix="] "/>
      <text macro="author" suffix=", "/>
      <text variable="title" quotes="true" suffix=", "/>
      <text variable="container-title" form="short" font-style="italic" suffix=" "/>
      <text macro="year-date" suffix=", "/>
      <text variable="volume" font-style="italic" suffix=", "/>
      <text macro="pages"/>
      <text macro="access"/>
    </layout>
  </bibliography>
</style>
